{
  "expo": {
    "name": "Tangabiz",
    "slug": "tangabiz-mobile",
    "version": "1.0.0",
    "scheme": "tangabiz",
    "platforms": [
      "ios",
      "android"
    ],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      "expo-dev-client",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Tangabiz to access your camera for product photos and barcode scanning.",
          "microphonePermission": "Allow Tangabiz to access your microphone."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Tangabiz to access your photos for product images and uploads."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Tangabiz to access your photos for saving reports and receipts.",
          "savePhotosPermission": "Allow Tangabiz to save photos to your library."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#22c55e",
          "sounds": []
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#22c55e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tangabiz.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Tangabiz to access your camera for product photos and barcode scanning.",
        "NSPhotoLibraryUsageDescription": "Allow Tangabiz to access your photos for product images.",
        "NSPhotoLibraryAddUsageDescription": "Allow Tangabiz to save receipts and reports to your photos.",
        "NSFaceIDUsageDescription": "Allow Tangabiz to use Face ID for secure authentication."
      }
    },
    "android": {
      "package": "com.tangabiz.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#22c55e"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "25830ad5-8307-4c9d-8a16-a785a2da9256"
      }
    },
    "owner": "codewithkin"
  }
}

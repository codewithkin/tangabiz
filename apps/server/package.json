{
  "name": "@tangabiz/server",
  "version": "0.0.1",
  "description": "Tangabiz API Server - Business Management Platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:push": "bunx prisma db push",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "db:studio": "bunx prisma studio",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.12",
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/s3-request-presigner": "^3.705.0",
    "@hono/zod-validator": "^0.4.2",
    "@mastra/core": "^0.24.9",
    "@mastra/memory": "^0.15.13",
    "@prisma/adapter-pg": "^6.2.1",
    "@prisma/client": "^6.2.1",
    "@tangabiz/env": "workspace:*",
    "ai": "^6.0.39",
    "hono": "^4.6.16",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.15.1",
    "pg": "^8.17.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.13.8",
    "@types/pg": "^8.16.0",
    "prisma": "^6.2.1",
    "typescript": "^5.7.2"
  }
}
